{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monodon/rust": ["packages/rust/src/index.ts"],
      "@monodon/test-lib": ["packages/test-lib/src/index.ts"],
      "@monodon/typescript-nx-imports-plugin": [
        "packages/typescript-nx-imports-plugin/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
