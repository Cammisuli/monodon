{
  "name": "rust",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rust/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/rust/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/rust"],
      "options": {
        "jestConfig": "packages/rust/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/rust",
        "tsConfig": "packages/rust/tsconfig.lib.json",
        "packageJson": "packages/rust/package.json",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "main": "packages/rust/src/index.ts",
        "assets": [
          "packages/rust/*.md",
          {
            "input": "./packages/rust/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/rust/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/rust",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/rust",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "link-plugin": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm link ./dist/packages/rust", "npm link @monodon/rust"],
        "parallel": false
      }
    }
  },
  "tags": []
}
